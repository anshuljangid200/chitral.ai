# Copy this file to .env and fill in the real values
# MongoDB connection string (replace <PASSWORD>, <DB_NAME> as needed)
MONGO_URI=mongodb+srv://<USER>:<PASSWORD>@cluster0.mongodb.net/<DB_NAME>?retryWrites=true&w=majority

# JWT secret used to sign tokens (use a secure random string)
JWT_SECRET=your_jwt_secret_here

# Optional frontend URL for CORS
FRONTEND_URL=https://your-frontend-url.vercel.app

# Node environment
NODE_ENV=production
